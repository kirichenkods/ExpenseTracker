<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="1-create-currency_rates-table" author="kirichenkods">
        <createTable tableName="currency_rates" schemaName="public">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="date_rate" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="char_code" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
            </column>

            <column name="unit_rate" type="NUMERIC(10,7)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="currency_rates" indexName="idx_currency_rates_date_rate">
            <column name="date_rate"/>
        </createIndex>

        <sql dbms="postgresql">
            CREATE INDEX idx_currency_rates_char_code_hash ON currency_rates USING HASH (char_code);
        </sql>
    </changeSet>
</databaseChangeLog>